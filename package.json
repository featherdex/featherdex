{
	"name": "featherdex",
	"main": "./build/index.js",
	"version": "0.0.2a",
	"description": "FeatherDeX Trader",
	"author": "",
	"nodejs": true,
	"config": {
		"forge": {
			"packagerConfig": {
				"icon": "img/icon-256px",
				"asar":true
			},
			"makers": [
				{
					"name": "@electron-forge/maker-zip",
					"config": {
						"name": "featherdex"
					}
				},
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"authors": "FeatherDeX",
						"name": "featherdex",
						"exe": "featherdex.exe",
						"version": "0.0.2"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin"
					]
				}
			]
		}
	},
	"scripts": {
		"start": "electron-forge start",
		"watch": "webpack --mode development --watch",
		"prebuild": "rimraf ./build/*",
		"build": "webpack --mode production",
		"package": "electron-forge package",
		"premake": "rimraf ./out/*",
		"make-win_32": "electron-forge make --arch=\"ia32\" --platform \"win32\"",
		"make-win_64": "electron-forge make --arch=\"x64\" --platform \"win32\"",
		"make-win": "npm run make-win_32 && npm run make-win_64",
		"make-mac": "electron-forge make --platform \"darwin\"",
		"make-linux": "electron-forge make --platform \"linux\"",
		"make": "npm run make-win && npm run make-mac && npm run make-linux"
	},
	"dependencies": {
		"appdata-path": "^1.0.0",
		"async-mutex": "^0.3.2",
		"bitcoin-core": "^3.0.0",
		"crypto-js": "^4.1.1",
		"electron-squirrel-startup": "^1.0.0",
		"flexlayout-react": "^0.5.3",
		"functional-red-black-tree": "^1.0.1",
		"lightweight-charts": "^3.6.1",
		"luxon": "^2.0.2",
		"node-fetch": "^2.6.5",
		"react": "^16.14.0",
		"react-app-menu": "^1.0.11",
		"react-dom": "^16.14.0",
		"react-modal": "^3.14.3",
		"react-notifications-component": "^3.0.5",
		"react-resize-aware": "^3.1.1",
		"react-search-autocomplete": "^5.4.2",
		"react-table": "^7.7.0",
		"simple-node-logger": "^21.8.12",
		"split-string": "^6.1.0",
		"terminal-in-react": "^4.3.1",
		"url-regex": "^5.0.0",
		"use-interval": "^1.3.0"
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.61",
		"@electron-forge/maker-deb": "^6.0.0-beta.61",
		"@electron-forge/maker-rpm": "^6.0.0-beta.61",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.61",
		"@electron-forge/maker-zip": "^6.0.0-beta.61",
		"@types/crypto-js": "^4.0.2",
		"@types/functional-red-black-tree": "^1.0.1",
		"@types/lodash": "^4.14.175",
		"@types/luxon": "^2.0.5",
		"@types/node": "^14.17.27",
		"@types/node-fetch": "^2.5.12",
		"@types/react": "^16.14.17",
		"@types/react-dom": "^16.9.14",
		"@types/react-modal": "^3.13.1",
		"@types/react-notifications-component": "^3.1.1",
		"@types/react-table": "^7.7.6",
		"css-loader": "^5.2.7",
		"electron": "^15.2.0",
		"html-webpack-plugin": "^5.4.0",
		"object-assign": "^4.1.1",
		"rimraf": "^3.0.2",
		"style-loader": "^3.3.0",
		"ts-loader": "^9.2.6",
		"url-loader": "^4.1.1",
		"webpack": "^5.58.2",
		"webpack-cli": "^4.9.0"
	}
}
